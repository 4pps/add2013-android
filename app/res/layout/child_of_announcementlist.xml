<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/announcementchild_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:paddingRight="5dp">
    
    <ImageView 
        android:id="@+id/announcementlist_announcement_image"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dp"/>
    
    <TextView 
        android:id="@+id/announcementlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1c1c1c"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/announcementlist_announcement_image"
        android:layout_alignTop="@+id/announcementlist_announcement_image"
        android:layout_marginLeft="7dp"/>
    
    <org.gdgankara.app.customview.EllipsizingTextView 
        android:id="@+id/announcementlist_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="#636363"
        android:layout_alignLeft="@+id/announcementlist_title"
        android:layout_below="@+id/announcementlist_title"
        android:layout_marginTop="3dp"/>
    

</RelativeLayout>