<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    
    <include
        android:id="@+id/ust_tab" 
        layout="@layout/usttab"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="#3b3b3b"
            android:padding="4dp"
            >
            
            <ViewFlipper
	            android:id="@+id/highlights"
	            android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:flipInterval="3000"
        		android:inAnimation="@android:anim/slide_in_left"
        		android:outAnimation="@android:anim/slide_out_right">
	            
                
                </ViewFlipper>
        
<!--         	<TextView  -->
<!--         	    android:layout_width="wrap_content" -->
<!--         	    android:layout_height="wrap_content" -->
<!--         	    android:background="#3b3b3b" -->
<!--         	    android:padding="3dp" -->
<!--         	    android:text="AnaEkran Resimleri" -->
<!--         	    android:layout_alignParentBottom="true" -->
<!--         	    android:layout_alignParentRight="true" -->
<!--         	    android:layout_marginBottom="15dp" -->
<!--         	    android:textColor="#94a839"/> -->
        	
            </RelativeLayout>
            
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:padding="4dp"
            android:background="#3b3b3b"
            android:orientation="vertical">
        	
            <LinearLayout
                android:layout_height="0dip"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:layout_weight="1">
                
                <ImageView
                    android:id="@+id/program_button"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />
                
                <LinearLayout 
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical">
                    
                    <ImageView 
                        android:id="@+id/oturum_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
	                    android:scaleType="fitXY" />
                    
                    <LinearLayout 
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1">
                        
                        <ImageView 
                            android:id="@+id/favori_button"
                    		android:layout_height="match_parent"
                    		android:layout_width="0dip"
                    		android:layout_weight="1"
                    		android:layout_marginRight="2dp"
	                         android:scaleType="fitXY" />
                        
                        <ImageView 
                            android:id="@+id/sponsor_button"
                    		android:layout_height="match_parent"
                    		android:layout_width="0dip"
                    		android:layout_weight="1"
                    		android:layout_marginLeft="2dp"
	                    android:scaleType="fitXY" />
                        
                    </LinearLayout>
                    
                </LinearLayout>
                
            </LinearLayout>
            
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="0dip"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_weight="1">
                
                <LinearLayout 
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="7">
                    
                    <ImageView 
	                    android:id="@+id/tweetWall"
	                    android:layout_width="match_parent"
	                    android:layout_height="0dip"
	                    android:layout_weight="1"
	                    android:layout_marginBottom="2dp"
	                    android:scaleType="fitXY" />
                    
                    <ImageView 
	                    android:id="@+id/harita_button"
	                    android:layout_width="match_parent"
	                    android:layout_height="0dip"
	                    android:layout_weight="1"
	                    android:layout_marginTop="2dp"
	                    android:scaleType="fitXY" />
                    
                </LinearLayout>
                
                <ImageView 
                    android:id="@+id/speakers_button"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_marginLeft="2dp"
	                android:scaleType="fitXY" />
                
            </LinearLayout>
        	
         </LinearLayout>
        
    </LinearLayout>
    
    <include
        android:id="@+id/alt_tab" 
        layout="@layout/alttab"
    />

</RelativeLayout>