<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    
    <include
        android:id="@+id/ust_tab" 
        layout="@layout/usttab"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="#3b3b3b"
            android:padding="4dp"
            >
            
            <ImageView 
	            android:id="@+id/highlights"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="#fff"/>
        
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:background="#3b3b3b"
        	    android:padding="3dp"
        	    android:text="AnaEkran Resimleri"
        	    android:layout_alignParentBottom="true"
        	    android:layout_alignParentRight="true"
        	    android:layout_marginBottom="15dp"
        	    android:textColor="#94a839"/>
        	
            </RelativeLayout>
        
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:background="#3b3b3b"
            android:orientation="horizontal">
            
            <LinearLayout 
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="3dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="1dp"
                android:orientation="vertical">
                
                <Button
                    android:id="@+id/program_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
           		    android:text="Program"
           		    android:textColor="#3b3b3b"
                    android:background="#fff"/>
                
                <Button 
                    android:id="@+id/tweetWall"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:text="TweetWall"
                    android:textColor="#3b3b3b"
                    android:background="#fff"/>
                
                <Button 
                    android:id="@+id/harita_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:text="Harita"
                    android:textColor="#3b3b3b"
                    android:background="#fff"/>
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="1dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="3dp"
                android:orientation="vertical">
                
                <Button 
                    android:id="@+id/oturum_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:text="Oturumlar"
                    android:textColor="#3b3b3b"
                    android:background="#fff"/>
                
                <Button 
                    android:id="@+id/favori_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:text="Favori"
                    android:textColor="#3b3b3b"
                    android:background="#fff"/>
                
                <Button 
                    android:id="@+id/sponsor_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:text="Sponsorlar"
                    android:textColor="#3b3b3b"
                    android:background="#fff"/>
                
            </LinearLayout>  
            
        </LinearLayout>
        
    </LinearLayout>
    
    <include
        android:id="@+id/alt_tab" 
        layout="@layout/alttab"
    />

</RelativeLayout>