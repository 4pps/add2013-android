<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="tagList_low" parent="@android:Theme">
        
        <item name="android:textViewStyle">@style/tagList_textLow</item>
  
    </style>
    
     <style name="tagList_Medium" parent="@android:Theme">
        
        <item name="android:textViewStyle">@style/tagList_textMedium</item>
  
    </style>
    
     <style name="tagList_High" parent="@android:Theme">
        
        <item name="android:textViewStyle">@style/tagList_textHigh</item>
  
    </style>
    
     <style name="tagList_XHigh" parent="@android:Theme">
        
        <item name="android:textViewStyle">@style/tagList_textXHigh</item>
  
    </style>
    
     <style name="tagList_textLow" parent="android:Widget.TextView">
  		<item name="android:textSize">13sp</item>
  		<item name="android:textColor">#000000</item>
	 </style>
	 
     <style name="tagList_textMedium" parent="android:Widget.TextView">
  		<item name="android:textSize">14sp</item>
  		<item name="android:textColor">#000000</item>
	 </style>
	 
     <style name="tagList_textHigh" parent="android:Widget.TextView">
  		<item name="android:textSize">15sp</item>
  		<item name="android:textColor">#000000</item>
	 </style>
	 
     <style name="tagList_textXHigh" parent="android:Widget.TextView">
  		<item name="android:textSize">16sp</item>
  		<item name="android:textColor">#000000</item>
	 </style>

</resources>